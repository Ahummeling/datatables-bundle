<table id="{{ datatable.setting('name') }}" class="{{ datatable.setting('class') }}">
    <thead>
    <tr>
        {% for column in datatable.columns %}
            <th>{{ column.label|trans }}</th>
        {% endfor %}
    </tr>
    {% if datatable.option('searching') and datatable.setting('column_filter') in ['both', 'thead'] %}
        <tr class="datatable-filters">
            {% for column in datatable.columns %}
                <td>{% if column.filter != null %}{% include column.filter.template with {'column': column} %}{% endif %}</td>
            {% endfor %}
        </tr>
    {% endif %}
    </thead>
    {% if datatable.option('searching') and datatable.setting('column_filter') in ['both', 'tfoot'] %}
        <tfoot>
        <tr class="datatable-filters">
        {% for column in datatable.columns %}
            <td>{% if column.filter != null %}{% include column.filter.template with {'column': column} %}{% endif %}</td>
        {% endfor %}
        </tr>
        </tfoot>
    {% endif %}
    <tbody>
    </tbody>
</table>